<div class="interview-dates">
  <ul>
    <% if @interviews.any? %>
      <% @interview_dates.each do |date, interviews| %>
        <li>
          <p><strong><%= date.strftime("%B %d") %></strong></p>
          <% interviews.each do |interview| %>
            <p>
              <%= interview.scheduled_time.strftime("%I:%M %p %Z") %> | 
              <%= link_to interview.participant.name, study_interview_path(@study, interview.id) %>
            </p>
          <% end %>
        </li>
      <% end %>
    <% end %>
    <li><strong><%= link_to "+ Add Interview", new_study_interview_path(@study) %></strong></li>
  </ul>
</div>