<h1><%= @study.name %></h1>
<h3><%= @study.description %></h3>
<%= link_to "edit", edit_study_path %> | 
<%= link_to "delete", @study, method: :delete, data: { confirm: "Delete This Study?" } %> <br />
<% if @study.tags.any? %>
  <h3>Tags:</h3>

  <% @study.tags.each do |tag| %>
    <%= link_to tag.name, studies_path(:tag => tag.name) %>
  <% end %> <br />
<% end %>

<% if @interviews.any? %>
  <h3>Interviews</h3>
  <% @interview_dates.each do |date, interviews| %>
    <h4><%= date.strftime("%B %d") %></h4>
    <% interviews.each do |interview| %>
      <p><%= interview.scheduled_time.strftime("%I:%M %p %Z") %> | <%= link_to interview.participant.name, study_interview_path(@study, interview.id) %></p>
    <% end %>
  <% end %>
<% end %>

<h4><%= link_to "Create Interview", new_study_interview_path(@study) %></h4>

<% if @study.notes.present? %>
  <h2>Notes</h2>
  <%= markdown @study.notes %>
<% end %>
<%= link_to "back to studies", studies_path %>