<h1 class = "main-header"><%= @study.name %></h1>
<p class = "subtitle"><%= @study.description %></p>
<%= link_to "edit", edit_study_path %> | 
<%= link_to "delete", @study, method: :delete, data: { confirm: "Delete This Study?" } %> <br />
<% if @study.tags.any? %>
  <h3>Tags:</h3>

  <% @study.tags.each do |tag| %>
    <%= link_to tag.name, studies_path(:tag => tag.name), :class => "tag" %>
  <% end %> <br />
<% end %>

<% if @interviews.any? %>
  <div class="section">
    <div class="span12 interviews">
      <h3>Interviews <span><%= link_to "Add Interview", new_study_interview_path(@study) %></span></h3>
      <div class="interview-dates">
        <ul>
          
          <% @interview_dates.each do |date, interviews| %>
            <li>
              <p><strong><%= date.strftime("%B %d") %></strong></p>
              
              <% interviews.each do |interview| %>
                <p>
                  <%= interview.scheduled_time.strftime("%I:%M %p %Z") %> | <%= link_to interview.participant.name, study_interview_path(@study, interview.id) %>
                </p>
              <% end %>

            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </div>
<% end %>

<% if @study.notes.present? %>
    <div class="notes">
      <h2>Notes</h2>
      <%= markdown @study.notes %>
    </div>
  
<% end %>
<%= link_to "back to studies", studies_path %>