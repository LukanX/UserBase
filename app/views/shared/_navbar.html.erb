<div id="nav-header">
  <div class="content nav-content">
    <h1><%= link_to "UserBase", root_path %></h1>
    <!-- Login / Account Stuff -->
    <div class="account-container">
      <% if user_signed_in? %>
        <div>
          <a href="#" data-dropdown="#account-dropdown" class = "account-link"><%= current_user.name %></a>
        </div>
        <div>
          <%= form_tag('/search', method: :get) do %>
            <%= search_field_tag :term, params[:term], :id => "search_field", :placeholder => "search" %>
          <% end %>
        </div>
     <% else %>
        <%= link_to "Sign In", new_user_session_path %> | <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>