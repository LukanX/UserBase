<%= render 'shared/error_messages', object: f.object %>

<div><%= f.label :name %>
<%= f.text_field :name, autofocus: true %></div>

<div><%= f.label :email %> 
<%= f.email_field :email %></div>

<div>
  <%= f.label :gender %> 
  <%= f.radio_button :gender, "male" %>
  <%= f.label :gender_male, "Male", :class => "radio" %>
  &nbsp; &nbsp;
  <%= f.radio_button :gender, "female" %>
  <%= f.label :gender_female, "Female", :class => "radio" %>
</div>

<div><%= f.label :age %> 
<%= f.text_field :age %></div>

<div> <%= f.label :income %> 
<%= f.select(:income, 
  options_for_select([
    "Not Specified",
    "Under $25k",
    "$25k - $50k",
    "$50k - $75",
    "$75k - $100k",
    "More than $100k"
    ])) %>
</div>

<div>
  <%= f.label :tags %> 
  <%= f.text_field :tag_list %>
</div>
